<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.leonardis.greendaoexample" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:name="com.example.leonardis.greendaoexample.application.GreenDaoExampleApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name">
        <activity
            android:name=".viewcontrollers.activites.ConversationActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".viewcontrollers.activites.MessageActivity"
            android:label="@string/app_name" >
        </activity>

        <service android:name=".services.CopyDatabaseService"
            android:exported="false"
            />
    </application>

</manifest>
